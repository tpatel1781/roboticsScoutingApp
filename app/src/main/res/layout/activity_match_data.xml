<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_match_data"
    android:background="@color/colorAccent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tejpatel.scouting.MatchDataActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:id="@+id/field_image_linear_layout" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/field_image" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/autonomous_position_button_linear_layout"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:background="@color/colorPrimaryDark"
                    android:padding="8dp"
                    android:elevation="20dp">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/left_position_button"
                        android:text="Left"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        android:buttonTint="@color/white"/>

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/center_position_button"
                        android:text="Center"
                        android:buttonTint="@color/white"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        android:layout_marginStart="48dp"
                        android:layout_marginEnd="48dp" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/right_position_button"
                        android:text="Right"
                        android:textSize="24sp"
                        android:buttonTint="@color/white"
                        android:textColor="@color/white"/>

                </LinearLayout>

            </RelativeLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:id="@+id/checkbox_linear_layout"
                android:layout_below="@id/field_image_linear_layout"
                android:layout_marginTop="8dp">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/placed_gear_checkbox"
                    android:text="Placed Gear"
                    android:paddingEnd="64dp"
                    android:buttonTint="@color/white"
                    android:textColor="@color/white"/>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/high_goal_checkbox"
                    android:text="High Goal"
                    android:paddingEnd="64dp"
                    android:buttonTint="@color/white"
                    android:textColor="@color/white"/>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/low_goal_checkbox"
                    android:text="Low Goal"
                    android:buttonTint="@color/white"
                    android:textColor="@color/white"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/whole_list_linear_layout"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/checkbox_linear_layout"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/gears_linear_layout"
                    android:background="@color/gray"
                    android:padding="4dp"
                    android:elevation="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="36sp"
                        android:textColor="@color/lightGray"
                        android:alpha="0.75"
                        android:padding="8dp"
                        android:layout_marginStart="12dp"
                        android:id="@+id/num_gears_text_view" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gears"
                        android:textSize="24sp"
                        android:textColor="@color/lightGray"
                        android:alpha="0.5"/>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/gears_button_linear_layout"
                        android:orientation="horizontal"
                        android:gravity="end"
                        android:layout_marginTop="18dp"
                        android:paddingEnd="24dp">

                        <Button
                            android:layout_height="36dp"
                            android:layout_width="36dp"
                            android:background="@drawable/ic_add_circle"
                            android:alpha="0.5"
                            android:id="@+id/add_gear_button"/>

                        <Button
                            android:layout_height="36dp"
                            android:layout_width="36dp"
                            android:background="@drawable/ic_remove_circle"
                            android:layout_marginStart="48dp"
                            android:layout_marginEnd="16dp"
                            android:alpha="0.5"
                            android:id="@+id/remove_gear_button"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/low_goal_linear_layout"
                    android:background="@color/gray"
                    android:padding="4dp"
                    android:elevation="20dp"
                    android:layout_marginTop="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="36sp"
                        android:textColor="@color/lightGray"
                        android:alpha="0.75"
                        android:padding="8dp"
                        android:layout_marginStart="12dp"
                        android:id="@+id/num_low_goals_text_view" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Low Goal Cycles"
                        android:textSize="24sp"
                        android:textColor="@color/lightGray"
                        android:alpha="0.5"
                        android:id="@+id/textView2" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/low_goal_button_linear_layout"
                        android:orientation="horizontal"
                        android:gravity="end"
                        android:layout_marginTop="18dp"
                        android:layout_marginEnd="24dp">

                        <Button
                            android:layout_height="36dp"
                            android:layout_width="36dp"
                            android:id="@+id/add_low_goal_button"
                            android:background="@drawable/ic_add_circle"
                            android:alpha="0.5"/>

                        <Button
                            android:layout_height="36dp"
                            android:layout_width="36dp"
                            android:id="@+id/remove_low_goal_button"
                            android:background="@drawable/ic_remove_circle"
                            android:layout_marginStart="48dp"
                            android:layout_marginEnd="16dp"
                            android:alpha="0.5"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/high_goal_linear_layout"
                    android:background="@color/gray"
                    android:padding="4dp"
                    android:elevation="20dp"
                    android:layout_marginTop="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/num_high_goals_text_view"
                        android:layout_marginStart="12dp"
                        android:textSize="36sp"
                        android:textColor="@color/lightGray"
                        android:alpha="0.75"
                        android:padding="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="High Goal Cycles"
                        android:textSize="24sp"
                        android:textColor="@color/lightGray"
                        android:alpha="0.5"/>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/shots_button_linear_layout"
                        android:orientation="horizontal"
                        android:gravity="end"
                        android:layout_marginTop="18dp"
                        android:layout_marginEnd="24dp">

                        <Button
                            android:layout_height="36dp"
                            android:layout_width="36dp"
                            android:background="@drawable/ic_add_circle"
                            android:alpha="0.5"
                            android:id="@+id/add_high_goal_button" />

                        <Button
                            android:layout_height="36dp"
                            android:layout_width="36dp"
                            android:background="@drawable/ic_remove_circle"
                            android:layout_marginStart="48dp"
                            android:layout_marginEnd="16dp"
                            android:alpha="0.5"
                            android:id="@+id/remove_high_goal_button" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/climbed_linear_layout"
                    android:background="@color/gray"
                    android:padding="4dp"
                    android:elevation="20dp"
                    android:layout_marginTop="12dp">

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/climbed_checkbox"
                        android:buttonTint="@color/lightGray"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Climbed"
                        android:textSize="36sp"
                        android:textColor="@color/lightGray"
                        android:alpha="0.75"
                        android:padding="8dp"
                        android:layout_marginStart="4dp"/>

                </LinearLayout>

            </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/whole_list_linear_layout"
                android:background="@color/gray"
                android:layout_marginTop="12dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:hint="Notes"
                android:textColorHint="@color/lightGray"
                android:paddingStart="12dp"
                android:elevation="20dp"
                android:textColor="@color/white"
                android:maxHeight="70dp"
                android:scrollIndicators="right"
                android:id="@+id/notes_edit_text" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/end_match_button"
                android:text="End Match"
                android:backgroundTint="@color/colorPrimaryDark"
                android:textColor="@color/white"
                android:layout_below="@id/notes_edit_text"
                android:layout_marginTop="16dp"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>

    </ScrollView>

    </RelativeLayout>

